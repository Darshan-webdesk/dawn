    "name": "Home CTA Collection",
    "settings": [

    {
      "type": "text",
      "id": "heading",
      "label":"Heading"
    },
    {
        "type": "collection",
        "id": "collection",
        "label":"Select Collection"
    },
    {
        "type":"header",
        "content":"CTA section"
    },
    {
        "type": "image_picker",
        "id": "image",
        "label":"Image"
    },
    {
        "type": "text",
        "id": "heading_cta",
        "label":"Heading"
      },
      {
        "type": "richtext",
        "id": "content_cta",
        "label":"content"
      },
      {
        "type": "text",
        "id": "btn_label",
        "label":"Button Label"
      },
      {
        "type": "url",
        "id": "btn_link",
        "label":"Button Link"
      }
    ],  
    "blocks": [
      
  ],
    "presets": [
    {
      "name": "Home CTA Collection"
    }
  ] 
  }
{% endschema %}