<div class="main-collection-cta">
    <div class="first-half-collection-cta">
        <div class="flext-title">
            <h4>{{ section.settings.heading }}</h4>
            <a href="{{ section.settings.collection.url }}">View All</a>
        </div>
        <div class="cta-product-card">
            {% for product in section.settings.collection.products limit: 2 %}
                <div class="cta-card">
                    <img src="{{ product.featured_image | img_url: 'master' }}" alt="">
                    <h4>{{ product.title }}</h4>
                    <span>{{ product.price }}</span>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="second-half-collection-cta" style="background-image: url('{{ section.settings.image | img_url : 'master' }}');">
        <div class="cta-btn">
            <a href="{{ section.settings.btn_link }}">{{ section.settings.btn_label }}</a>
        </div>
        <div class="collection-cta-content">
            <h2>{{ section.settings.heaing_cta }}</h2>
            {{ section.settings.content_cta }}
        </div>

    </div>
</div>



{% schema %}
