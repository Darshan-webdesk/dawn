<div class="main-home-collection">
    <div class="main-heading-collection" style="background-image: url('{{ section.settings.bg_image | img_url : 'master' }}');">
            <h2>{{ section.settings.heading }}</h2>
    </div>
    <div class="home-collection-product owl-carousel owl-theme">
        {% for product in section.settings.collection.products %}
            <div class="item home-collection-product-card">
                <img src="{{ product.featured_image | img_url: 'master' }}" alt="">
                <span>{{ product.title }}</span>
                <div class="shop-now-btn">
                    <a href="{{ product.url }}">Shop Now</a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>


{% schema %}
{
    "name": "Home Collection",
    "settings": [
    {
        "type":"text",
        "id":"heading",
        "label":"Heading"
    },
    {
        "type":"image_picker",
        "id":"bg_image",
        "label":"Background Image"
    },
    {
        "type":"collection",
        "id":"collection",
        "label":"Select Collection"
    }
  
    ],  
    "blocks": [ 
    
  ],
    "presets": [
    {
      "name": "Home Collection"
    }
  ] 
  }
{% endschema %}  